<p id="notice"><%= notice %></p>

<% if user_signed_in? %>

<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>First name</th>
      <th>Last namestring</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th>user id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @friends.each do |friend| %>
    <% if friend.user == current_user%>
      <tr>
        <td><%= friend.first_name %></td>
        <td><%= friend.last_namestring %></td>
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>
        <td><%= friend.user_id %></td>
        <td><%= link_to 'Show', friend %></td>
        <td><%= link_to 'Edit', edit_friend_path(friend) %></td>
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', 
new_friend_path, class:"btn btn-secondary" %>
<% else %>

<h1>Hello World</h1>
This is my first rails webpage
please kindly create your account to coonect with our community!

<% end %>